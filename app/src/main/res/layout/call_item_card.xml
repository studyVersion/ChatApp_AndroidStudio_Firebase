<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:padding="15dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/call_image"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginRight="6dp"
        app:civ_border_width="0.5dp"
        app:civ_border_color="#FF000000"
        android:layout_marginEnd="6dp"
        android:src="@drawable/anonymous"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/call_name"
        android:text="Badre Serhiri"
        android:layout_toEndOf="@+id/call_image"
        android:layout_marginLeft="35dp"
        style="@style/Caption"
        android:textSize="22sp"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/call_type"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/call_name"
        android:layout_toEndOf="@+id/call_image"
        android:scaleType="fitXY" />
    <TextView
        android:id="@+id/call_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/call_name"
        android:layout_toEndOf="@+id/call_type"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:textSize="15sp"
        android:text="18:25"
        />

    <ImageView
        android:id="@+id/call_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@+id/call_image"
        android:layout_marginLeft="246dp"
        android:layout_marginTop="11dp"
        android:scaleType="fitXY"
        android:background="@drawable/call_me"/>


</RelativeLayout>